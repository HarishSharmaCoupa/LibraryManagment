<%= render 'shared/errors', obj: @book %>


<h1>Update the Book</h1>
 
<%= form_with(model: @book, local: true) do |f| %>
  <p> 
    <%= f.label :name %><br/> 
    <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :isbn %><br/> 
  <%= f.number_field :isbn %> 
  </p>

  <p>
    <%= f.label :author %><br/> 
    <%= f.text_area :author %> 
  </p>

    <p>
    <%= f.label :year %><br/> 
    <%= f.date_field :year %> 
    </p>

    <p>
    <%= f.label :description %><br/> 
    <%= f.text_area :description %> 
    </p>
  <p>
    <%= f.submit %> 
  </p>
<% end %>