<style>
table, th, td {
   border: 2px solid #800001;
   border-collapse: collapse;
}
</style>
<%= will_paginate @books, :container => false %>
<h1>Avaliable Books</h1>
<table>
  <tr>
    <th>Name</th>
    <th>ISBN</th>
    <th>Author</th>
    <th>Year</th>
    <th>Description</th>
    <th>Actions</th>
    <th>Created by</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.isbn %></td>
    <td><%= book.author %></td>
    <td><%= book.year.to_date %></td>
    <td><%= book.description %></td>
    <td><%= link_to 'Show', book_path(book) %> |--| <%= link_to 'Edit', edit_book_path(book) %> |--| <%=link_to 'Delete', book_path(book), method: :delete, data: {confirm: "this will delete the book confirm?"}%> </td>
    <td><%= link_to book.user.username, user_path(book.user) %> </td>
  </tr>
  <% end %> 
</table>

<h2><%= link_to 'New Book', new_book_path%></h2>

<%= link_to 'About', about_path%>
<%= link_to 'Home', root_path%>